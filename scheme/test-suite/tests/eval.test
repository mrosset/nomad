(define-module (test-eval)
  #:use-module (nomad eval)
  #:use-module (nomad minibuffer)
  #:use-module (srfi srfi-1)
  #:use-module (test-suite lib))

(define-command (alpha-one bar) "" bar)
(define-command (alpha-two bar) "" bar)

(with-test-prefix "nomad eval"
                  (pass-if "input completion" (list= string=? (input-completion "alpha")
                                                     '("alpha-two" "alpha-one")))

                  (pass-if "is command" (command? alpha-one))
                  (pass-if "add to command list" (begin
                                                   (add-to-command-alist 'version version)
                                                   (eq? (assoc-ref command-alist 'version) version))))

(set! %load-compiled-path
      (cons* "@CCACHEDIR@"
             %load-compiled-path))

(use-modules (ice-9 pretty-print)
             (emacsy emacsy)
             (nomad nomad))

(define (pretty-string sym)
  (with-output-to-string (lambda _
                           (pretty-print sym))))

(define (debug-paths)
  (format #t
          "version:      ~a~%"
          (nomad-version))
  (format #t
          "dynamic-lib:  ~a~%"
          (dynamic-path))
  (format #t
          "load-path:    ~a~%"
          (pretty-string %load-path))
  (format #t
          "comiled-path: ~a~%"
          (pretty-string %load-compiled-path)))

(emacsy-initialize #t)

(exit (start-nomad (command-line)))



(set! %load-compiled-path
      (cons* "@CCACHEDIR@"
             %load-compiled-path))

(use-modules (ice-9 pretty-print)
             (g-golf)
             (emacsy emacsy)
             (nomad nomad))

(define (pretty-string sym)
  (with-output-to-string (lambda _
                           (pretty-print sym))))

(define (debug-paths)
  (format #t
          "version:      ~a~%"
          (nomad-version))
  (format #t
          "dynamic-lib:  ~a~%"
          (dynamic-path))
  (format #t
          "load-path:    ~a~%"
          (pretty-string %load-path))
  (format #t
          "comiled-path: ~a~%"
          (pretty-string %load-compiled-path)))

(emacsy-initialize #t)

(define (start-qt)
  (use-modules (nomad qt))
  (gi-import "Qt")
  (gi-import "Gio")
  (for-each (lambda (x)
              (gi-import-by-name "Gtk" x))
            '("init" "Widget"))
  (gtk-init #f #f)
  (let ((app (make <qt-application>))
        (window (make-qt-main-window)))
    (gtk-widget-show window)
    (g-application-run app 0 #f)))

(if (string= (option-platform (command-line)) "gtk")
    (exit (start-nomad (command-line)))
    (start-qt))


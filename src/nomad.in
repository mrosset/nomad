(set! %load-compiled-path
      (cons* "@CCACHEDIR@"
             %load-compiled-path))

(use-modules (nomad nomad)
             (nomad platform)
             (emacsy emacsy))

(add-to-load-path %module-directory)

(eval-when (expand load eval)
  (use-modules (oop goops))
  (default-duplicate-binding-handler
    '(merge-generics replace warn-override-core warn last))
  (use-modules (g-golf)))

(define (display-paths)
  (format #t
          "version:      ~a~%"
          (nomad-version))
  (format #t
          "tyeplib-path: ~a~%"
          (getenv "GI_TYPELIB_PATH"))
  (format #t
          "load-path:    ~a~%"
          (pretty-string %load-path))
  (format #t
          "extention-dir ~a~%"
          (getenv "NOMAD_WEB_EXTENSION_DIR"))
  (format #t
          "compiled-path: ~a~%"
          (pretty-string %load-compiled-path)))

(define (main args)
  (load-environment)
  (let ((app (make <application> #:application-id "org.gnu.nomad")))
    (g-application-run app (length args) args)))

